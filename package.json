{
  "name": "hiya-business",
  "productName": "HiyaClient",
  "description": "Hiya Business Application",
  "keywords": [],
  "main": "./main.js",
  "version": "1.2.60",
  "author": "Sparklime Technology Co. Ltd.",
  "scripts": {
    "start": "cross-env UPDATE_DEV=true electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "electron-log": "^5.4.0",
    "electron-pos-printer": "^1.3.7",
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^24.8.8",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.hiya-business.win10",
    "productName": "HiyaClient",
    "publish": [
      {
        "provider": "github",
        "owner": "genbin",
        "repo": "electron_hiya_business",
        "private": true
      }
    ],
    "copyright": "Copyright Â© 2025 ${author}",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/food.ico"
    },
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/installer.ico",
      "uninstallerIcon": "build/uninstall.ico",
      "installerHeaderIcon": "food.ico",
      "perMachine": true,
      "deleteAppDataOnUninstall": false
    },
    "extraResources": [
      "config.json",
      {
        "from": "assets/fonts",
        "to": "assets/fonts"
      }
    ],
    "extraFiles": [
      "global.js",
      "api.js"
    ]
  }
}
